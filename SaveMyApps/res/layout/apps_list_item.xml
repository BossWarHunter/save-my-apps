<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content" >
	<!-- Default icon is the down arrow, but it changes dynamically, 
		 depending if the app is saved on the server or not -->
		 
	<!-- TODO un-comment once the install feature is added -->
	<!-- ImageView 
		android:id="@+id/installed_icon" 
		android:src="@drawable/down_arrow"
		android:layout_height="wrap_content"
		android:layout_width="@dimen/image_width"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/image_left_marg"
		android:layout_marginRight="@dimen/image_right_marg"
	/-->
	
	<ImageView 
		android:id="@+id/saved_icon" 
		android:layout_height="wrap_content"
		android:layout_width="@dimen/image_width"
		android:layout_centerVertical="true"
		android:layout_marginLeft="@dimen/image_left_marg"
		android:layout_marginRight="@dimen/image_right_marg"
		android:layout_toRightOf="@+id/installed_icon"
	/>
	<TextView 
		android:id="@+id/label"
		android:text="@+id/TextView01"
		android:textSize="@dimen/text_size"
		android:layout_height="wrap_content"
		android:layout_width="wrap_content"
		android:layout_centerVertical="true"
		android:layout_toRightOf="@+id/saved_icon"
		android:layout_toLeftOf="@+id/checkbox"
	/>
	<CheckBox 
		android:id="@+id/checkbox" 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_marginLeft="@dimen/checkbox_left_marg"
		android:layout_marginRight="@dimen/checkbox_right_marg" 
		android:layout_alignParentRight="true"
	/>
</RelativeLayout>